<Page x:Class="Hotel.Pages.main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotel.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="main">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="RegBtn" Content="Журнал регистрации" Margin="5" Click="RegBtn_Click"/>
            <Button Content="Работники отеля" Margin="5" Click="Button_Click"/>
            <Button Content="Клиенты" Margin="5" Click="Button_Click_1"/>
            <Button x:Name="ServBtn" Content="Услуги" Margin="5" Click="ServBtn_Click"/>
            <Button x:Name="CalcBtn" Content="Вычисления" Margin="5" Click="CalcBtn_Click"/>
            <Button x:Name="ExitBtn" Content="Выход" Margin="5" Click="ExitBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
